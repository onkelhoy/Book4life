<div id="popup">
    <div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
        <button type="button" onclick="hidePop()" class="close" aria-label="Close"><i class="fa fa-times"></i></button>
        <div class="delete">
            <h3 cass="bg-danger">Delete this book</h3>
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" id="password" placeholder="Write your password">
                <p class="help-block">We need this for confirmation</p>
            </div>
            <button type="submit" onclick="removeConfirm()" class="btn btn-default">Confirm</button>
        </div>
        <div class="addChapter">
            <h3 cass="bg-danger">Add chapter</h3>
            <div class="form-group">
                <label for="chapterName">Chapter Name</label>
                <input class="form-control" type="text" id="chapterName" placeholder="Name of the chapter">
            </div>
            <div class="form-group">
                <input class='inputfile' type="file" id="pages" accept="image/*" data-multiple-caption="{count} files selected" multiple>
                <label for="pages"><i class="fa fa-upload" aria-hidden="true"></i> Select Pages</label>
                <p class="help-block">Have the pages in a order for displaying in correct order.</p>
            </div>
            <button type="submit" onclick="uploadChapter($(this).prev().children('#pages'))" class="btn btn-default">Confirm</button>
        </div>
        <div class="front-end_settings">
            <h3>Front</h3>
            <div style='padding:5px'>
                <div><label for='front-outer'>outer-page <span></span></label>
                <div class='input-group'>
                    <input type='text' placeholder='' id='front-outer' class='form-control'>

                    <span class='input-group-btn'>
                        <input type='file' accept='image/*' class='inputfile'>
                        <button class='btn btn-primary'>Choose file</button></span>
                    <span class='input-group-btn'>
                        <input type='button' class='btn btn-success' value='upload' onclick='bsUpload($(this), 1)'></span>
                </div></div>
                <div><label for='front-inner'>inner-page <span></span></label>
                <div class='input-group'>
                    <input type='text' placeholder='' class='form-control' id='front-inner'>

                    <span class='input-group-btn'>
                        <input type='file' accept='image/*' class='inputfile'>
                        <button class='btn btn-primary'>Choose file</button></span>
                    <span class='input-group-btn'>
                        <input type='button' class='btn btn-success' value='upload' onclick='bsUpload($(this), 2)'></span>
                </div></div>
            </div>
            
            <h3>End</h3>
            <div style='padding:5px'>
                <div><label for='end-inner'>inner-page <span></span></label>
                <div class='input-group'>
                    <input type='text' placeholder='' class='form-control' id='end-inner'>

                    <span class='input-group-btn'>
                        <input type='file' accept='image/*' class='inputfile'>
                        <button class='btn btn-primary'>Choose file</button></span>
                    <span class='input-group-btn'>
                        <input type='button' class='btn btn-success' value='upload' onclick='bsUpload($(this), 4)'></span>
                </div></div>
                <div><label for='end-outer'>outer-page <span></span></label>
                <div class='input-group'>
                    <input type='text' placeholder='' class='form-control' id='end-outer'>

                    <span class='input-group-btn'>
                        <input type='file' accept='image/*' class='inputfile'>
                        <button class='btn btn-primary'>Choose file</button></span>
                    <span class='input-group-btn'>
                        <input type='button' class='btn btn-success' value='upload' onclick='bsUpload($(this), 3)'></span>
                </div></div>
            </div>
        </div>
    </div>
</div>

